<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("list", :default => "List")}", document_types_path  %></li>
      <li><%= link_to "#{t("new", :default => "New")}", new_document_type_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("list", :default => "List") %> - <%= t("documenttype", :default => "DocumentType") %></h2>
    <div class="inner">
      <table class="table">
        <tr>                       
          <th>
            <%= t("document_type.name", :default => "Name") %>
          </th>
          <th><%= t("document_type.quantity", :default => "Quantity")  %></th>
          <th><%= t("created_at", :default => "Created at")  %></th>          
        </tr>
        <% @document_types.each do |document_type| -%>
          <tr class="<%= cycle("odd", "even") %>">            
            <td>
              <%= link_to document_type.name, document_type_path(document_type) %>
            </td>
            <td>
              <%= link_to document_type.documents.count, document_type_path(document_type) %>
            </td>
            <td>
              <%= dt(document_type.created_at) %>
            </td>            
          </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>

        <%= will_paginate @document_types  %>

      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
