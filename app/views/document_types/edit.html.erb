<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("list", :default => "List")}", document_types_path  %></li>
      <li><%= link_to "#{t("new", :default => "New")}", new_document_type_path %></li>
      <li class="active"><%= link_to "#{t("edit", :default => "Edit")}", edit_document_type_path %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title"><%= t("edit", :default => "Edit") %> - <%= t("documenttype", :default => "DocumentType") %></h2>
    <div class="inner">
      <%= form_for @document_type, :url => document_type_path(@document_type), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>