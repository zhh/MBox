<div class="group">
  <%= f.label :name, t("document_type.name", :default => "Name"), :class => :label %>
  <%= f.text_field :name, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :description, t("document_type.description", :default => "Description"), :class => :label %>
  <%= f.text_area :description, :class => 'text_area' %>
</div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("save", :default => "Save")}") %> <%= t("save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("or", :default => "or") %></span>
  <%= link_to t("cancel", :default => "Cancel"), document_types_path, :class => "text_button_padding link_button" %>
</div>