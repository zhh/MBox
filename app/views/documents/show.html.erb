<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", documents_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_document_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", document_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.document.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</b>
          <%= @document.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.document.description", :default => t("activerecord.labels.description", :default => "Description")) %>:</b>
          <%= @document.description %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_document_path(@document), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), document_path(@document), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>