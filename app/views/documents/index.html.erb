<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", documents_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_document_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Documents</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th>
            <%= t("activerecord.attributes.document.title", :default => t("activerecord.labels.title", :default => "Title")) %>
          </th>
          <th><%= t("web-app-theme.document_type", :default => "Document Type")  %></th>
          <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @documents.each do |document| -%>
          <tr class="<%= cycle("odd", "even") %>">            
            <td>
              <%= link_to document.title, document_path(document) %>
            </td>
            <td>
              <%= link_to document.document_type.name, document_path(document) %>
            </td>
            <td>
              <%= document.created_at %>
            </td>
            <td class="last">
              <%= link_to "#{t("web-app-theme.show", :default => "Show")}", document_path(document) %> |
              <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_document_path(document) %> |
              <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", document_path(document), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
            </td>
          </tr>
        <% end -%>
      </table>

      <div class="actions-bar wat-cf">


        <div class="digg_pagination">
          <div class="page_info">
            <%= page_entries_info @documents %>

            <%= will_paginate @documents %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
